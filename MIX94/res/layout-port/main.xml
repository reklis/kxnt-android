<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frontface"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:weightSum="1"
    android:background="@drawable/bk"
    android:visibility="visible"
>
    <ImageView
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="0.54"
    ></ImageView>
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/audioControlsFrame"
    >
        <com.cibotechnology.visualization.AudioVisualizer
            android:id="@+id/audiovisualizer"
            android:layout_gravity="center"
            android:layout_height="157dp"
            android:layout_width="222dp"
        ></com.cibotechnology.visualization.AudioVisualizer>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/mask"
            android:layout_height="wrap_content"
            android:id="@+id/levelMask"
            android:layout_gravity="center"
        ></ImageView>
        <Button
            android:layout_gravity="center"
            android:id="@+id/pausebutton"
            android:background="@drawable/pause"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        ></Button>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/loading"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/loadingButton"
        ></ImageView>
        <ProgressBar
            android:layout_width="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/loadingIndicator"
        ></ProgressBar>
        <Button
            android:layout_gravity="center"
            android:id="@+id/playbutton"
            android:background="@drawable/play"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        ></Button>
    </FrameLayout>
    <Button
        android:id="@+id/contactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/contactup"
    android:layout_marginTop="40dip" android:layout_marginBottom="20dip"></Button>
</LinearLayout>
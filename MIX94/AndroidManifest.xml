<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="com.cibotechnology.MIX"
>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
    <uses-permission
        android:name="android.permission.WAKE_LOCK" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="MIX"
        android:debuggable="false"
    >
        <activity
            android:name="com.cibotechnology.MIX.MainActivity"
            android:label="MIX"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:screenOrientation="portrait"
        >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:exported="false"
            android:name="com.cibotechnology.MIX.MusicService"
        >
            <intent-filter>
                <action
                    android:name="com.cibotechnology.MIX.action.PLAY" />
                <action
                    android:name="com.cibotechnology.MIX.action.PAUSE" />
                <action
                    android:name="com.cibotechnology.MIX.action.SKIP" />
                <action
                    android:name="com.cibotechnology.MIX.action.REWIND" />
                <action
                    android:name="com.cibotechnology.MIX.action.STOP" />
            </intent-filter>
            <intent-filter>
                <action
                    android:name="com.cibotechnology.MIX.action.URL" />
                <data
                    android:scheme="http" />
            </intent-filter>
        </service>
        <receiver
            android:name="com.cibotechnology.MIX.MusicIntentReceiver"
        >
            <intent-filter>
                <action
                    android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
    </application>
</manifest>